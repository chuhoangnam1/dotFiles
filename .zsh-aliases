function gf() {
  [[ "$#" != 1 ]] && local remote="origin"
  git fetch "${remote:=$1}"
}

alias gl="git log"
alias glg="git log --graph --decorate"
alias glga="git log --graph --decorate --all"
alias glgg="git log --graph --decorate --oneline"
alias glgga="git log --graph --decorate --oneline --all"

alias gm="git merge"
